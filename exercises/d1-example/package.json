{
  "name": "todo-api",
  "version": "1.0.0",
  "description": "D1 Todo API exercise for Cloudflare Workers Workshop",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:create": "wrangler d1 create todo-db",
    "db:migrate:local": "wrangler d1 execute todo-db --local --file=./schema.sql",
    "db:migrate:remote": "wrangler d1 execute todo-db --remote --file=./schema.sql",
    "types": "wrangler types"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.0.0",
    "typescript": "^5.0.0",
    "wrangler": "^3.0.0"
  }
}
