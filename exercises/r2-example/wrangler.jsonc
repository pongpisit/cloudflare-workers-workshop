{
  "name": "file-api",
  "main": "src/index.ts",
  "compatibility_date": "2024-01-01",
  
  // R2 Bucket binding
  // First create the bucket with: npx wrangler r2 bucket create file-uploads
  "r2_buckets": [
    {
      "binding": "BUCKET",
      "bucket_name": "file-uploads"
    }
  ],
  
  // Environment variables
  "vars": {
    "MAX_FILE_SIZE": "10485760"
  }
}
